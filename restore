# /bin/bash

UPLINK=${HOME}/Library/Application\ Support/Uplink
if [ ! -d "$UPLINK" ]; 
  then echo "Uplink folder does not exist" && exit 1;
fi

GRAPHICS=${UPLINK}/mods/graphics
if [ ! -d "$GRAPHICS" ]; 
  then echo "Graphics folder does not exist" && exit 1;
fi

FILES=$(cat ${HOME}/Desktop/f.txt)
for f in $FILES
do
  if [ -f "$GRAPHICS/$f" ]; then
    file="$GRAPHICS"/$f
    rm "$file"
  fi
done

exit 0
